<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - MyApps</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">

  <div class="container">
    <div class="row justify-content-center align-items-center vh-100">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <h1 class="h3 fw-bold">Welcome Back</h1>
              <p class="text-muted">Log in to access your dashboard</p>
            </div>

            <!-- Login Form -->
            <form id="login-form">
              <div id="error-alert" class="alert alert-danger d-none" role="alert"></div>

              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required autocomplete="email">
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required autocomplete="current-password">
              </div>

              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                  <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                  Log In
                </button>
              </div>
            </form>

            <div class="text-center text-muted mb-3">OR</div>

            <!-- Google Sign-In Button -->
            <div class="d-grid mb-3">
              <a href="/auth/google" class="btn btn-outline-secondary">
                <i class="bi bi-google me-2"></i> Continue with Google
              </a>
            </div>

            <div class="text-center">
              <small>
                Don't have an account? <a href="/register">Create one</a>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script src="/js/auth.js"></script>
  <script>
    // Initialize the login form handler
    handleLogin();
  </script>
</body>
</html>