<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account - MyApps</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">

  <div class="container">
    <div class="row justify-content-center align-items-center vh-100">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <h1 class="h3 fw-bold">Create Account</h1>
              <p class="text-muted">Get started with your new account</p>
            </div>

            <!-- Registration Form -->
            <form id="register-form">
              <div id="error-alert" class="alert alert-danger d-none" role="alert"></div>

              <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required>
              </div>

              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                  <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                  Create Account
                </button>
              </div>
            </form>

            <div class="text-center text-muted mb-3">OR</div>

            <!-- Google Sign-In Button -->
            <div class="d-grid mb-3">
              <a href="/auth/google" class="btn btn-outline-secondary">
                <i class="bi bi-google me-2"></i> Continue with Google
              </a>
            </div>

            <div class="text-center">
              <small>
                Already have an account? <a href="/login">Log In</a>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script src="/js/auth.js"></script>
  <script>
    // Initialize the registration form handler
    handleRegistration();
  </script>
</body>
</html>